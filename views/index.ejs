<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (restaurants.length > 0) {%>
            <table class="table table-bordered">
                <thead >
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Restaurant Name</th>
                        <th scope="col">Location</th>
                        <th scope="col">Type</th>
                        <th scope="col">Waktu Buka</th>
                        <th scope="col">Short Name</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% restaurants.forEach((restaurant, index) => { %>
                        <tr>
                            <th scope="row"><%= restaurant.id %></th>
                            <td><img src="/assets/img/<%= restaurant.image %>" class="rounded-circle restaurant-img" alt=""></td>
                            <td><%= restaurant.res_name %></td>
                            <td><%= restaurant.location %></td>
                            <td><%= restaurant.type %></td>
                            <td><%= restaurant.waktu_buka %></td>
                            <td>@<%= restaurant.short_name %></td>
                            <td>0</td>
                            <td>
                                <a href="/edit/<%= restaurant.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= restaurant.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No restaurants found. Go <a href="/add" >here</a> to add restaurants.</p>
        <% } %>
    </div>
</div>
</body>
</html>